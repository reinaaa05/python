# クラスで、引数と戻り値のあるメソッドを作る

class Item:
    tax = 1.08
    def __init__(self,price,quantity):
        self.price = price
        self.quantity = quantity

    def total(self):
        return int(self.price * self.quantity * Item.tax)

apple = Item(120,15)
total = apple.total()
print("合計金額は" + str(total) + "円です")

orenji = Item(8,32)
print("合計金額は" + str(orenji.total()) + "円です")
